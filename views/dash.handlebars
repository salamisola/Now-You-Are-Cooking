<div class="container">


    <div class="navigation" class="container">
        <div class="row">
            <div id="add" class="col-md-4">
                <img src="/img/Recipe-01-01.png" class="img-thumbnail">
                <button type=submit class="firstbutton">
                    Add A Recipe</button>
            </div>
            <div id="search" class="col-md-4">
                <img src="/img/Search-01-01.png" class="img-thumbnail">
                <button type=submit class="secondbutton">
                    Search A Recipe</button>
            </div>
            <div id="rate" class="col-md-4">
                <img src="/img/Rate-01-01-01.png" class="img-thumbnail">
                <button type=submit class="thirdbutton">
                    Rate A Recipe</button>
            </div>

        </div>
    </div>

    <div class="results" class="container">
        <div class="row">
            <div class="col-md-4">
                <div id="Lotterypick" class="card">
                    <div class="card-header">
                        Lottery Recipe
                    </div>
                    <div class="card-body">
                        <h5 id="lrTite" class="card-title"></h5>

                        <a href="#" class="btn btn-primary" id="lrLinkGo">Go to recipe</a>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div id="TopPerformer" class="card">
                    <div class="card-header">
                        Top Performer
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            {{#each recipes}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    if (sessionStorage.getItem("user") ){
        $('.firstbutton').click(function () {
            event.preventDefault();
            console.log("Add click")
            window.location.pathname = '/add'
        })

        $('.secondbutton').click(function () {
            event.preventDefault();
            console.log("Search click")
            window.location.pathname = '/search'
        })

        $('.thirdbutton').click(function () {
            event.preventDefault();
            console.log("Rate click")
            window.location.pathname = '/rate'
        })


    }
    else {
        window.location.href = "/";
    }


</script>